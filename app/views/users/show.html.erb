<div class="container">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-6">
			<h2>user info</h2>
			<table class="table tabel-hover">
				<tbody>
					<tr>
						<td>名前</td>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<td>名前（カナ）</td>
						<td><%= @user.name_kana%></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= @user.email %></td>
					</tr>
					<tr>
						<td>電話番号</td>
						<td><%= @user.tell %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= @user.post_code %><br><%= @user.address %></td>
					</tr>
					<tr>
						<td>ポイント</td>
						<td><%= @user.point %></td>
					</tr>
					<% if current_user.manager == true %>
						<tr>
							<td>備考</td>
							<td><%= @user.memo %></td>
						</tr>
						<tr>
							<td>ステータス</td>
							<td><%= @user.user_status %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= link_to "編集", edit_user_path, class: "btn btn-success" %><br><br>


			<%= form_for @user do |f| %>
			<%= f.submit "退会しちゃう？", class:"btn btn-danger" %>
			<%= f.select :user_status, [["やめないっしょ！", "release"],["やめまーーす！", "nonrelease"]], {}, {class:"btn btn-default btn-lg"} %>
			<% end %>



		</div>
	</div>
</div>

<br>

<!--    購入履歴一覧    -->

<div class="container">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-9">
			<h3>購入履歴一覧</h3>
			<table class="table table-hover">
				<thead>
					<th>購入日時</th>
					<th>購入金額</th>
					<th>
						<% if current_user.manager %>
							ステータス
						<% end %>
					</th>
					<th></th>
				</thead>


				<tbody>
					<% @purchases.each do |purchase| %>
						 <tr>
							<td>
								<%= purchase.date.year %> 年
								<%= purchase.date.month %> 月
								<%= purchase.date.day %> 日
							</td>
							<td><%= purchase.pur_total%></td>
							<td>
								<% if current_user.manager %>
									<% if purchase.status == 0 %>
										未処理
									<% elsif purchase.status == 1 %>
										準備中
									<% elsif purchase.status == 2 %>
										発送済み
									<% end %>
								<% end %>
							</td>
							<td><%= link_to "show",purchase_path(purchase.id),class: "btn btn-info" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
  		</div>
 	</div>
</div>

<div class="container">
	<div class="row">

		<div class="col-md-3 form-group">
			<h2>パスワード編集</h2>

			<%= form_for(@user) do |f| %>

			<div class="form_group">
				<label for="inputEmail"> Password </label>
				<%= f.password_field :password, autofocus: :false, class: "form-control password", id: "inputEmail" %>
			</div><br>

			<div class="form_group">
				<label for="inputEmail"> Password_confirm </label>
				<%= f.password_field :password_confirmation, autofocus: true, class: "form-control password_confirm", id: "inputEmail" %>
			</div><br>

			<%= f.submit "変更を保存", class: "btn btn-danger pass-button" %>
			<%= link_to 'back', edit_user_path, class: "btn btn-info pass-button" %>
			<% end %>
		</div>
	</div>
</div>
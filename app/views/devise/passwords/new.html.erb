<div class="container">
	<div class="row">
		<div class="col-md-4">
		</div>
		<div class="col-md-4 form-group">

			<h2 class="page-title-2">Forgot your password?</h2>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<%= devise_error_messages! %>

			<div class="field">
				<%= f.label :email %><br />
				<%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
			</div>

			<p></p>

			<div class="actions">
				<%= f.submit "Send me reset password instructions", class: "btn btn-info btn-block" %>
			</div>
			<% end %>

			<br>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
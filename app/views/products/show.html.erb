<h2> 商品詳細画面</h2><br>

<%= link_to "登録商品一覧画面", products_path %>


<h2><%= @product.pro_title %></h2>

<!-- 価格 -->
price : <%= @product.pro_price %><br>


<!-- ジャンル名 -->
<% if @product.pro_genre_id == 1 %>
genre : J-POP<br>

<% elsif @product.pro_genre_id == 2 %>
genre : K-POP<br>

<% else %>
genre : その他<br>

<% end %>


<!-- 登録日 -->
date : <%= @product.pro_date %><br>


<!-- レーベル名 -->
<% if @product.pro_label_id == 1 %>
label : エイベックス<br>

<% elsif @product.pro_label_id == 2 %>
label : ユニバーサル・ミュージック<br>

<% else %>
label : その他<br>

<% end %>


<!-- アーティスト名 -->
artist : <%= @product.pro_artist %><br><br>






<%if user_signed_in? && current_user.manager == true %>
<%=link_to "商品情報を編集する", edit_pro_genre_product_path(@product.pro_genre_id, @product.id), class:"btn btn-success btn-xs" %>
<% end %>

<!-- --------------------------11/15 松下追記/編集したよ-------------------------------------- -->

<% if user_signed_in?  %>
    <%= form_for @cart_item ,url:product_cart_items_path(@product) do |f| %>

        <!--------- 注文数の制限を後でかける。在庫から減るような処理をする。 --------------->
		<p>
			注文数<%= f.number_field :amount,min:"1",max:"50" %>個  / 
			<%= f.submit "カートへ入れる" , class: "btn btn-warning btn-sm" %> 
		</p>
    <% end %>

<% else %>

    <%= link_to "ログインしてカートへ入れる", user_session_path %>

<% end %>

<!-- ---------------------------11/17 池畠wrote ----------------------------- -->

<h3>レビュー　</h3>
<table class="table table-hover">
	<thead>
		<th></th>
		<%if user_signed_in? && current_user.manager == true %>
			<th></th>
			<th></th>
			<th></th>
		<% end %>
	</thead>
	<tbody>
		<tr>
			<% @review.each do |review| %>
				<td><%= review.review_star %><br><%= review.review_body %></td>
				<% if user_signed_in? && current_user.manager == true %>
					<td>
						<% if review.review_status == true %>
							<p>公開中</p>
						<% else %>
							<p>非公開中</p>
						<% end %>
					</td>
					<%= form_for (@review) do |f| %>
						<td><% f.select :review_status, [["公開", "release"],["非公開", "nonrelease"]] %></td>
					<% end %>
					<td><% link_to '会員情報確認', user_path(review.user_id)%></td>
				<% end %>
			<% end %>
		</tr>
	</tbody>
</table>

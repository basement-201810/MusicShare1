<div class="container">
		<% if flash[:notice] %>
			<div class="alert alert-info">
				<%= flash.notice %>
			</div>
		<% end %>
	<h3><%= @purchase.date.strftime('%Y年%m月%d日') %>購入分</h3>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-hover">
				<thead>
					<th></th>
					<th>タイトル</th>
					<th>アーティスト</th>
					<th>数量</th>
					<th>単価</th>
					<th>小計</th>
					<th></th>
					<th></th>
				</thead>
				<tbody>

					<% @purchase_items.each do |purchase_item| %>
						<tr>
							<td><%= attachment_image_tag purchase_item, :image, size: "100x100", fallback: "no-image_rocket.png" %></td>
							<td><strong><%= purchase_item.title %></strong></td>
							<td><%= purchase_item.artist %></td>
							<td><%= purchase_item.amount %></td>
							<td><%= number_to_currency(purchase_item.sub_total / purchase_item.amount, :unit => "￥",:precision => 0)  %></td>
							<td><strong><%= number_to_currency(purchase_item.sub_total, :unit => "￥",:precision => 0)  %></strong></td>
							<td><%= link_to "show",product_path(purchase_item.product_id), class: "btn btn-primary btn-xs" %></td>
							<td>
								<% if current_user.manager == false %>
									<%= form_for purchase_item.review, url: review_path(purchase_item.review.id) do |f| %>
										<div class="form_group has_icon">
											<label for="inputEmail">評価</label>
											<%= f.select :review_star, [["☆☆☆☆☆", "0"],["★☆☆☆☆", "1"],["★★☆☆☆", "2"],["★★★☆☆", "3"],["★★★★☆", "4"],["★★★★★", "5"]] %>
										</div>
										<div class="form_group has-icon">
											<label for="inputEmail">レビュー</label>
											<%= f.text_area :review_body, autofocus: true, class: "review_body ", id: "inputEmail" %>
										</div>
										<div class="form_group has-icon">
											<%= f.submit "投稿", class: "btn btn-warning btn-xs" %>
										</div>
									<% end %>
								<% else %>
									<%= purchase_item.review.review_star %>
									<%= purchase_item.review.review_body %>
									<%= form_for purchase_item.review, url: review_path(purchase_item.review.id) do |f| %>
										<%= f.select :review_status, [["公開", "release"],["非公開", "nonrelease"]] %>
										<%= f.submit "変更",class:"btn btn-success btn-xs"%>
									<% end %>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<div align="right">
				<% if current_user.manager %>
						<%= form_for @purchase, url: purchase_path do |f| %>

							<p>ステータス　<%= f.select :status, [["未処理","0"],["準備中","1"], ["発送済み","2"]] %></p>

						<%= f.submit "ステータスを変更", class:"btn btn-default active" %>
					<% end %>
				<% end %>
			</div>
  		</div>
 	</div>

</div>





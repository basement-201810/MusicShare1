<div class="container">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-6">
			<p><%= flash.notice %></p>
			<h2>user info</h2>
			<table class="table tabel-hover">
				<tbody>
					<tr>
						<td>名前</td>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<td>名前（カナ）</td>
						<td><%= @user.name_kana%></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= @user.email %></td>
					</tr>
					<tr>
						<td>電話番号</td>
						<td><%= @user.tell %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= @user.post_code %><br><%= @user.address %></td>
					</tr>
					<tr>
						<td>ポイント</td>
						<td><%= @user.point %></td>
					</tr>
					<% if current_user.manager == true %>
						<tr>
							<td>備考</td>
							<td><%= @user.memo %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= link_to "編集", edit_user_path, class: "btn btn-success" %>
			<%= link_to "退会", "data-confirm" => "本当に退会しますか？", class: "btn btn-danger" %>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-9">
			<h3>購入履歴一覧</h3>
			<table class="table table-hover">
				<thead>
					<th>購入日時</th>
					<th>購入金額</th>
					<th>
						<% if current_user.manager == false %>
							-
						<% else %>
							ステータス
						<% end %>
					</th>
					<th></th>
				</thead>


		<tbody>
			<tr>
				<% @purchases.each do |purchase| %>   <!--購入履歴一覧 -->
					<td>
						<%= purchase.date.year %> 年
						<%= purchase.date.month %> 月
						<%= purchase.date.day %> 日
					</td>
					<td><%= purchase.pur_total%></td>
					<td><%= purchase.status %></td>
					<td><%= link_to "show",purchase_purchase_items_path(purchase.id),class: "btn btn-info" %></td>
				<% end %>
			</tr>
		</tbody>
	</table>
  </div>
 </div>
</div>

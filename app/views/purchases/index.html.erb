<h1>受注管理（一覧）ページ</h1>

<div class="container">
	<div class="row">
		<div class="col-md-10">
			<h1>会員数<%= @user_all -1 %>人！！！！！！     売り上げ<%= @pur_total_sum %>円！！！！！！！</h1>
			<table class="table table-hover">
				<thead>
					<th>購入者</th>
					<th>購入日時</th>
					<th>ステータス</th>
					<th></th>
				</thead>


				<tbody>
					<% @purchases.each do |purchase| %>
						<tr>
							<td><%= purchase.pur_name %></td>
							<td>
								<%= purchase.date.year %> 年
								<%= purchase.date.month %> 月
								<%= purchase.date.day %> 日
							</td>
							<td><%= purchase.status %></td>
							<td><%= link_to "show",purchase_purchase_items_path(purchase.id),class: "btn btn-info" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
  		</div>
 	</div>
</div>